<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="camera_buttons">
        <item name="android:layout_width">wrap_content</item>>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:backgroundTint">#340055FF</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>
    <style name="back_buttons"
           parent="Widget.Design.FloatingActionButton">
        <item name="android:src">@drawable/icon_back</item>
        <item name="android:layout_width">wrap_content</item>>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:baselineAlignBottom">false</item>
        <item name="elevation">0dp</item>
        <item name="pressedTranslationZ">0dp</item>
        <item name="borderWidth">1dp</item>
        <item name="fabSize">normal</item>
        <item name="maxImageSize">55dp</item>
    </style>
    <style name="listitem_partsofcode">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">20sp</item>
    </style>
</resources>