<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/id_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="16sp"
            android:textColor="#000000"/>

    <TextView
            style="@style/listitem_partsofcode"
            android:text="TextView"
            android:id="@+id/firstPart_tv"
            app:layout_constraintTop_toBottomOf="@id/id_tv"/>

    <TextView
            style="@style/listitem_partsofcode"
            android:text="TextView"
            android:id="@+id/secondPart_tv"
            tools:layout_editor_absoluteX="0dp"
            app:layout_constraintTop_toBottomOf="@+id/firstPart_tv"/>

    <TextView
            style="@style/listitem_partsofcode"
            android:text="TextView"
            android:id="@+id/thirdPart_tv"
            tools:layout_editor_absoluteX="0dp"
            app:layout_constraintTop_toBottomOf="@+id/secondPart_tv"/>
</androidx.constraintlayout.widget.ConstraintLayout>